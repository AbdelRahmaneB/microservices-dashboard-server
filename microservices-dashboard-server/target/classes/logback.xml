<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="generic-file-appender.xml"/>

    <appender name="CONSOLE" level="INFO"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %-5level %X{host:-}:%X{port:-} %X{application} gid:%X{globalId:-} rid:%X{uuid} trace=%X{X-Trace-Id:-} span=%X{X-Span-Id:-} [%thread] %logger{36} %msg%n
            </pattern>
        </encoder>
        <target>System.out</target>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>