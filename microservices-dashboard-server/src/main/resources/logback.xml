<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="generic-file-appender.xml"/>

    <appender name="CONSOLE" level="DEBUG"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{ISO8601} %-5level [%thread] %logger{36} %msg%n
            </pattern>
        </encoder>
        <target>System.out</target>
    </appender>
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
    <logger name="be.ordina.msdashboard" level="DEBUG">
        <appender-ref ref="CONSOLE" />
    </logger>
</configuration>